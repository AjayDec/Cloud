{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "OS": {
            "type": "string",
            "allowedValues": [
                "CentOS6", 
                "RHEL6"
            ],
            "metadata": {
                "description": "This parameter allows the user to select OS"
            }
        }
    },
    "variables": {
        "OSList": {
            "CentOS6": {
                "plan": {
                    "name": "cloudera-centos-6",
                    "publisher": "cloudera",
                    "product": "cloudera-centos-6"
                },
                "imageRef": {
                    "publisher": "cloudera",
                    "offer": "cloudera-centos-6",
                    "sku": "CLOUDERA-CENTOS-6",
                    "version": "latest"
                }
            },
            "RHEL6": {
                "plan": {
                    "name": "cloudera-centos-6",
                    "publisher": "cloudera",
                    "product": "cloudera-centos-6"
                },
                "imageRef": {
                    "publisher": "Redhat",
                    "offer": "RHEL",
                    "sku": "6.7",
                    "version": "latest"
                }
            }
        }
    },
    "resources": [],
    "outputs": {
        "OS": {
            "type": "object",
            "value": "[variables('OSList')[parameters('OS')]]"
        }
    }
}